<%= content_for :page_title, t('.heading') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-l">
      <%= t('.heading') %>
    </h1>

    <section>
      <h2 class="govuk-heading-m">
        <%= t('.sections.section_1.heading') %>
      </h2>
      <p>
        <%= t('.sections.section_1.paragraphs.paragraph_1') %>
      </p>
      <p>
        <%= t('.sections.section_1.paragraphs.paragraph_2') %>
      </p>
    </section>
    <section>
      <h2 class="govuk-heading-m">
        <%= t('.sections.section_2.heading') %>
      </h2>
      <p>
        <%= t('.sections.section_2.paragraphs.paragraph_1') %>
      </p>
      <p>
        <%= t('.sections.section_2.paragraphs.paragraph_2') %>
      </p>
      <p>
        <%= t('.sections.section_2.paragraphs.paragraph_3') %>
      </p>
      <p>
        <%= t('.sections.section_2.paragraphs.paragraph_4') %>
      </p>
    </section>
    <section>
      <h2 class="govuk-heading-m">
        <%= t('.sections.section_3.heading') %>
      </h2>
      <p>
        <%= t('.sections.section_3.paragraphs.paragraph_1_html', ppg_link: link_to(t('.sections.section_3.ppg_link'), t('.sections.section_3.ppg_link'), class: 'govuk-link--no-visited-state')) %>
      </p>
    </section>
    <section>
      <h2 class="govuk-heading-m">
        <%= t('.sections.section_4.heading') %>
      </h2>
      <p>
        <%= t('.sections.section_4.paragraphs.paragraph_1') %>
      </p>
      <p>
        <%= t('.sections.section_4.paragraphs.paragraph_2_html', guidance_document: link_to(t('.sections.section_4.guidance_document_text'), t('.sections.section_4.guidance_document_url'), class: 'govuk-link--no-visited-state')) %>
      </p>
      <p>
        <%= t('.sections.section_4.paragraphs.paragraph_3') %>
      </p>
    </section>
    <section>
      <h2 class="govuk-heading-m">
        <%= t('.sections.section_5.heading') %>
      </h2>
      <p>
        <%= t('.sections.section_5.paragraphs.paragraph_1_html', email_link: mail_to(t('.sections.section_5.email_link'), t('.sections.section_5.email_link'), class: 'govuk-link--no-visited-state')) %>
      </p>
    </section>

    <hr class="govuk-section-break govuk-section-break--m">

    <%= form_with url: @form_path, method: :get, local: true, html: { specialvalidation: true, novalidate: true } do %>
      <%= submit_tag t('common.submit'), class: "govuk-button", aria: { label: t('common.submit') } %>
    <% end %>
  </div>
</div>
    