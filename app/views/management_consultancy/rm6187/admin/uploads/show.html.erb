<%= content_for :page_title, t('.heading', number: @upload.short_uuid) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <span class="govuk-caption-l govuk-!-margin-bottom-0"><%= t('.caption', framework: params[:framework]) %></span>
    <h1 class="govuk-heading-xl govuk-!-margin-bottom-4"><%= t('.heading', number: @upload.short_uuid) %></h1>
    <%= govuk_summary_list(
      [
        {
          key: {
            text: t('.status')
          },
          value: {
            text: govuk_tag(*upload_status_tag(@upload.aasm_state))
          }
        },
        {
          key: {
            text: t('.datetime')
          },
          value: {
            text: format_date_time(@upload.created_at)
          }
        }
      ],
      classes: 'govuk-summary-list--no-border'
    ) %>
  </div>
</div>

<%= render(partial: 'shared/admin/in_progress') unless @upload.failed? || @upload.published? %>
<%= render(partial: 'failed') if @upload.failed? %>

<hr class="govuk-section-break govuk-section-break--m">

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <table class="govuk-table">
      <caption class="govuk-table__caption"><%= t('.files') %></caption>
      <thead class="govuk-table__head">
        <tr class="govuk-table__row">
          <th class="govuk-table__header" scope="col"><%= t('.name') %></th>
          <th class="govuk-table__header" scope="col"><%= t('.download') %></th>
        </tr>
      </thead>
      <tbody class="govuk-table__body">
        <% ManagementConsultancy::RM6187::Admin::Upload.attributes.each do |file| %>
          <% next unless @upload.send(file).attached? %>
          <tr>
            <td class="govuk-table__cell"><%= t(".file_name.#{file}") %></td>
            <td class="govuk-table__cell"><%= link_to t('.download'), admin_upload_file(@upload, @upload.send(file), :mc, params[:framework].downcase), download: '' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to t('.return'), management_consultancy_rm6187_admin_uploads_path, class: 'govuk-link--no-visited-state govuk-!-font-size-19' %>
  </div>
</div>
