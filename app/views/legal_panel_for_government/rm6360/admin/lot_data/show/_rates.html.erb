<% @jurisdictions.each do |jurisdiction| %>
  <% table_rows = rates_table_headers_and_rows(@supplier_framework_lot_rates, jurisdiction.id) %>

  <% next if table_rows[1].empty? %>

  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <%= govuk_table(
        *table_rows,
        caption: {
          text: jurisdiction.name
        },
        first_cell_is_header: true,
        classes: 'ccs-rates-table'
      ) %>
    </div>
  </div>
<% end %>
