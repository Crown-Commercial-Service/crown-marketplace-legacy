<%= content_for :page_title, t('.page_title', service_name:) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl"><%= t('.caption', service_name:, framework: params[:framework]) %></span>
      <%= t('.heading') %>
    </h1>
  </div>
</div>

<%= ccs_dashboard_section(
  [
    {
      title: t('.upload_supplier_data.title'),
      href: uploads_index_path,
      description: t('.upload_supplier_data.description')
    },
    Marketplace.environment_name == :production ? {
      title: t('.view_supplier_data.title'),
      href: suppliers_index_path,
      description: t('.view_supplier_data.description')
    } : {
      title: t('.manage_supplier_data.title'),
      href: suppliers_index_path,
      description: t('.manage_supplier_data.description')
    },
  ],
  t('.supplier_data')
) %>

<%= ccs_dashboard_section(
  [
    {
      title: t('.view_user_reports.title'),
      href: reports_index_path,
      description: t('.view_user_reports.description')
    },
  ],
  t('.user_reports')
) if framework_has_analytics? %>