<%= content_for :page_title, t('.page_title', service_name:) %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl"><%= t('.caption', service_name:, framework: params[:framework]) %></span>
      <%= t('.heading') %>
    </h1>
  </div>
</div>

<%= ccs_dashboard_section(
  [
    {
      title: t('.supplier_data'),
      href: upload_index_path,
      description: t('.manage_supplier_data')
    },
  ],
  t('.supplier_data')
) %>

<%= ccs_dashboard_section(
  [
    {
      title: t('.user_reports'),
      href: reports_index_path,
      description: t('.view_user_reports')
    },
  ],
  t('.user_reports')
) if framework_has_analytics? %>