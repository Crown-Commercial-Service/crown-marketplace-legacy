<%= content_for :page_title, t('.heading') %>

<% admin_breadcrumbs(
  { text: t('shared.admin.suppliers.index.heading'), href: supplier_index_path },
  { text: t('.heading') }
)%>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h1 class="govuk-heading-xl">
      <span class="govuk-caption-xl"><%= @supplier_framework.supplier_name %></span>
      <%= t('.heading') %>
    </h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-three-quarters">
    <h2 class="govuk-heading-l">
      <%= t('.basic_supplier_information.title') %>
    </h2>
    <hr class="govuk-section-break govuk-section-break--visible">
    <%= govuk_summary_list(
      [
        {
          key: {
            text: t('.basic_supplier_information.name')
          },
          value: {
            text: @supplier_framework.supplier_name
          }
        },
        {
          key: {
            text: t('.basic_supplier_information.duns')
          },
          value: {
            text: @supplier_framework.supplier.duns_number ? @supplier_framework.supplier.duns_number : t('.no_data')
          }
        },
        {
          key: {
            text: t('.basic_supplier_information.is_sme')
          },
          value: {
            text: @supplier_framework.supplier.sme ? t('yes') : t('no')
          },
        }
      ],
      attributes: {
        id: 'supplier-details--supplier-information'
      }
    ) %>
  </div>
</div>

<% if supplier_contact_information.any? %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <h2 class="govuk-heading-l">
        <%= t('.supplier_contact_information.title') %>
      </h2>
      <hr class="govuk-section-break govuk-section-break--visible">
      <%= govuk_summary_list(supplier_contact_information, attributes: { id: 'supplier-details--contact-information' }) %>    
    </div>
  </div>
<% end %>

<% if additional_supplier_information.any? %>
  <div class="govuk-grid-row">
    <div class="govuk-grid-column-three-quarters">
      <h2 class="govuk-heading-l">
        <%= t('.additional_supplier_information.title') %>
      </h2>
      <hr class="govuk-section-break govuk-section-break--visible">
      <%= govuk_summary_list(additional_supplier_information, attributes: { id: 'supplier-details--additional-information' }) %>    
    </div>
  </div>
<% end %>
