<%= govuk_input(
  :name,
  form: form,
  label: {
    text: t('.contact_name'),
    classes: 'govuk-label--m'
  },
  classes: 'govuk-input--width-20',
  attributes: {
    required: true,
    maxlength: 255
  }
) if @section_attributes.include?(:name) %>

<%= govuk_input(
  :email,
  form: form,
  label: {
    text: t('.contact_email'),
    classes: 'govuk-label--m'
  },
  classes: 'govuk-input--width-20',
  attributes: {
    required: true,
    maxlength: 255
  }
) if @section_attributes.include?(:email) %>

<%= govuk_input(
  :telephone_number,
  form: form,
