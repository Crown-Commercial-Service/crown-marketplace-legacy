<%= govuk_input(
  :address,
  form: form,
  label: {
    text: t('.address'),
    classes: 'govuk-label--m'
  },
  attributes: {
    required: true,
    maxlength: 255
  }
) if @section_attributes.include?(:address) %>

<% %i[lot_1_prospectus_link lot_2_prospectus_link lot_3_prospectus_link lot_4a_prospectus_link lot_4b_prospectus_link lot_4c_prospectus_link lot_5_prospectus_link].map do |lot_prospectus_link_attribute| %>
  <%= govuk_input(
    lot_prospectus_link_attribute,
    form: form,
    label: {
      text: t(".#{lot_prospectus_link_attribute}"),
      classes: 'govuk-label--m'
    },
    classes: 'govuk-input--width-20',
    attributes: {
      required: true,
      maxlength: 255
    }
  ) if @section_attributes.include?(lot_prospectus_link_attribute) %>
<% end %>