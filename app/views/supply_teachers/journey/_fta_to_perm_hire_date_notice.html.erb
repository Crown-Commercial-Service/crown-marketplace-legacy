<%= add_optional_error_prefix_to_page_title(@journey.errors) %>
<%= content_for :page_title, t('.page_title') %>
<%= content_for :page_section, t("supply_teachers.#{params[:framework].downcase}.page_section") %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h1 class="govuk-heading-m"><%= t('.header', date: @journey.previous_step.hire_by_date.strftime('%d %b %Y')) %></h1>
    <p class="govuk-body"><%= t('.body') %></p>
    <%= form_tag @form_path, method: :get do %>
      <%= hidden_fields_for_previous_steps_and_responses(@journey) %>
      <%= submit_tag t('.submit'), class: "govuk-button" %>
    <% end %>
  </div>
</div>
