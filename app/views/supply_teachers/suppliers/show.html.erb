<%= content_for :page_title, @supplier.name  %>
<%= content_for :page_section, t("supply_teachers.#{params[:framework].downcase}.page_section") %>


<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <span class="govuk-caption-xl app-content__section-heading">
      <%= t('.header') %>
    </span>
    <h1 class="govuk-heading-xl">
      <%= @supplier.name %>
    </h1>
  </div>
</div>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full govuk-!-margin-top-7 govuk-!-margin-bottom-7">
    <%= render partial: "supply_teachers/#{params[:framework].downcase}/shared/rates_table", locals: { grouped_rates: @supplier.rates_grouped_by_job_type } %>
  </div>
</div>

<table id="agency-branches" class="govuk-table">
  <thead class="govuk-table__head">
    <tr class="govuk-table__row">
      <th scope="col" class="govuk-table__header" width="15%"><%= t('.branch_name') %></th>
      <th scope="col" class="govuk-table__header" width="20%"><%= t('.contact_name') %></th>
      <th scope="col" class="govuk-table__header" width="25%"><%= t('.contact_email') %></th>
      <th scope="col" class="govuk-table__header" width="20%"><%= t('.phone_number') %></th>
      <th scope="col" class="govuk-table__header" width="20%"><%= t('.address') %></th>
    </tr>
  </thead>
  <tbody class="govuk-table__body">
    <%= render partial: 'branch', collection: @branches %>
  </tbody>
</table>
