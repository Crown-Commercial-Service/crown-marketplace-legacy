<%= paginate supplier_frameworks, views_prefix: 'shared', window: 0, outer_window: 2, params: { controller: :suppliers, action: :all_suppliers } %>

<%= govuk_table(
  [
    {
      text: t('.agency') 
    }
  ],
  if supplier_frameworks.empty?
    [
      [
        {
          text: t('.no_agencies_found')
        }
      ]
    ]
  else
    supplier_frameworks.map do |supplier_framework|
      [
        {
          text: tag.h2(class: 'govuk-heading-m govuk-!-margin-bottom-0') do
            link_to(supplier_framework.supplier_name, show_path(supplier_framework), class: 'govuk-link ccs-no-underline')
          end,
          classes: 'agency-row'
        }
      ]
    end
  end,
) %>

<%= paginate supplier_frameworks, views_prefix: 'shared', window: 0, outer_window: 2, params: { controller: :suppliers, action: :all_suppliers } %>
