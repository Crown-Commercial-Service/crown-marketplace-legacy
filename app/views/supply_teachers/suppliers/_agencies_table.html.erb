<%= paginate paginated_suppliers, views_prefix: 'shared', window: 0, outer_window: 2, params: { controller: :suppliers, action: :all_suppliers } %>

<%= govuk_table(
  [
    {
      text: t('.agency') 
    }
  ],
  if paginated_suppliers.empty?
    [
      [
        {
          text: t('.no_agencies_found')
        }
      ]
    ]
  else
    paginated_suppliers.map do |supplier|
      [
        {
          text: tag.h2(class: 'govuk-heading-m govuk-!-margin-bottom-0') do
            link_to(supplier.name, show_path(supplier), class: 'govuk-link ccs-no-underline')
          end,
          classes: 'agency-row'
        }
      ]
    end
  end,
) %>

<%= paginate paginated_suppliers, views_prefix: 'shared', window: 0, outer_window: 2, params: { controller: :suppliers, action: :all_suppliers } %>
