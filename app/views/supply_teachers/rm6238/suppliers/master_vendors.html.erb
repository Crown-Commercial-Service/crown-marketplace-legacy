<%= content_for :page_title, t('.page_title') %>
<%= content_for :page_section, t('supply_teachers.rm6238.page_section') %>

<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <span class="govuk-caption-xl">
      <%= t(".threshold_position.#{params[:threshold_position]}") %>
    </span>
    <h1 class="govuk-heading-xl">
      <%= t('.header') %>
    </h1>

    <%= govuk_details(t('.do_next.header'), classes: 'govuk-!-margin-bottom-5') do %>
      <ul class="govuk-list govuk-list--bullet">
        <li>
          <%= t('.do_next.further_competition_html', 
              advice_url: 'https://www.gov.uk/guidance/buying-for-schools/run-a-mini-competition') %>
          <%= t('.do_next.competition_online_html', 
              esourcing_url: 'https://www.gov.uk/government/publications/esourcing-suite-guidance-for-customers') %>
        </li>
        <li>
          <%= t('.do_next.sign_form_html',
                framework_url: 'https://ccs-agreements.cabinetoffice.gov.uk/contracts/rm6238',
                form_url: 'https://assets.crowncommercial.gov.uk/wp-content/uploads/RM6238-Order-form-template-full-version-V1.docx') %>
        </li>
      </ul>
      <p class="govuk-body">
        <%= t('.do_next.more_help') %>
      </p>
    <% end %>

    <p class="govuk-body"><%= number_to_human(@suppliers.count, units: :suppliers) %></p>
    <%= render partial: 'master_vendor', collection: @suppliers %>
  </div>
</div>
