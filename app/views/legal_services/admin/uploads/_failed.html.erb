<div class="govuk-grid-row">
  <div class="govuk-grid-column-two-thirds">
    <h2 class="govuk-heading-m"><%= t('.errors_with_upload') %></h2>
    <p>
      <%= t('.below_is_a_list') %>
    </p>
  </div>
</div>
<div class="govuk-grid-row">
  <div class="govuk-grid-column-full">
    <%= govuk_table(
      [
        {
          text: t('.issue'),
          attributes: {
            width: '25%'
          }
        },
        {
          text: t('.details')
        }
      ],
      @upload.import_errors.map do |error|
        [
          {
            text: t("legal_services.#{params[:framework].downcase}.admin.uploads.failed.error_name.#{error[:error]}"),
          },
          {
            text: get_error_details("legal_services.#{params[:framework].downcase}", error[:error], error[:details]),
          },
        ]
      end
    ) %>
  </div>
</div>
